<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DashboardActivity"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAQ: Questions fréquemment posées"
            android:textSize="30sp"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="35dp"
            android:textColor="@color/orange_secondary"
            android:fontFamily="@font/aleo"
            />

        <com.example.miniprojet.ExpandableTextView
            android:id="@+id/expandableTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <com.example.miniprojet.ExpandableTextView
            android:id="@+id/expandableTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <com.example.miniprojet.ExpandableTextView
            android:id="@+id/expandableTextView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <com.example.miniprojet.ExpandableTextView
            android:id="@+id/expandableTextView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <com.example.miniprojet.ExpandableTextView
            android:id="@+id/expandableTextView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <com.example.miniprojet.ExpandableTextView
            android:id="@+id/expandableTextView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <com.example.miniprojet.ExpandableTextView
            android:id="@+id/expandableTextView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="50dp" />
    </LinearLayout>
</ScrollView>