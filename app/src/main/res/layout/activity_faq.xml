<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:maxHeight="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/backgrounddrawing" />
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.DashboardActivity"
        android:orientation="vertical"
        android:layout_marginBottom="40dp">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginTop="30dp"
            android:layout_marginStart="22dp"
            android:src="@drawable/back"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/question_icon"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAQ: Questions fréquemment posées"
            android:textSize="28sp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="35dp"
            android:textColor="@color/black"
            android:fontFamily="@font/aleo"
            android:textStyle="bold"
            />

        <com.example.miniprojet.customAdapters.ExpandableTextView
            android:id="@+id/expandableTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <com.example.miniprojet.customAdapters.ExpandableTextView
            android:id="@+id/expandableTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <com.example.miniprojet.customAdapters.ExpandableTextView
            android:id="@+id/expandableTextView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <com.example.miniprojet.customAdapters.ExpandableTextView
            android:id="@+id/expandableTextView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <com.example.miniprojet.customAdapters.ExpandableTextView
            android:id="@+id/expandableTextView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <com.example.miniprojet.customAdapters.ExpandableTextView
            android:id="@+id/expandableTextView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>
</ScrollView>
</FrameLayout>