<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue"
        android:textSize="40sp"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="35dp"
        android:textColor="@color/orange_secondary"
        android:fontFamily="@font/aleo"
    />

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nom + prÃ©nom"
        android:textSize="40sp"
        android:layout_marginBottom="60dp"
        android:layout_marginHorizontal="35dp"
        android:textColor="@color/orange_secondary"
        android:fontFamily="@font/aleo"
    />

    <Button
        android:id="@+id/creer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Soumettre une demande"
        android:textSize="19sp"
        android:layout_marginHorizontal="50dp"
        android:paddingVertical="10dp"
        android:backgroundTint="@color/yellow_primary"
        android:textColor="@color/black"
        android:fontFamily="@font/aleo"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/rounded_back1"
        android:orientation="vertical"
        android:paddingVertical="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/aleo"
            android:text="Suivi des demandes"
            android:textColor="@color/black"
            android:textSize="26sp" />

        <ListView
            android:id="@+id/demande"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="20dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="15sp" />

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom">

        <ImageButton
            android:id="@+id/faqButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/faq"
            android:contentDescription="FAQ"
            android:background="@android:color/transparent"
            android:layout_marginStart="20dp"
            android:onClick="clickMsg"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/clientSupportButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/client_support"
            android:contentDescription="Client support"
            android:background="@android:color/transparent"
            android:layout_marginEnd="20dp"
            android:onClick="clickMsg"/>
    </LinearLayout>

</LinearLayout>