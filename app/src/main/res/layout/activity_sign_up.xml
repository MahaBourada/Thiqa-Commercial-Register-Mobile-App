<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:maxHeight="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/backgrounddrawing" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context=".activities.DashboardActivity"
        android:orientation="vertical"
        android:background="@drawable/white_backgroung"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="40dp"
        android:gravity="center">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="146.834dp"
            android:src="@drawable/trustlogo_final"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Créer un compte"
            android:textSize="33sp"
            android:layout_marginVertical="15dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/aleo"
            android:textStyle="bold"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:hint="Adresse e-mail"
            style="@style/MyTextInputLayout" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:fontFamily="@font/aleo"
                android:textColorHint="#666"
                android:textStyle="bold"
                android:maxLines="1"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginHorizontal="20dp"
            android:hint="Prénom"
            style="@style/MyTextInputLayout" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/prenom"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:fontFamily="@font/aleo"
                android:textColorHint="#666"
                android:textStyle="bold"
                android:inputType="textCapSentences"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginHorizontal="20dp"
            android:hint="Nom de famille"
            style="@style/MyTextInputLayout" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ndf"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:fontFamily="@font/aleo"
                android:textColorHint="#666"
                android:textStyle="bold"
                android:inputType="textCapSentences"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginHorizontal="20dp"
            android:hint="Numéro de téléphone"
            style="@style/MyTextInputLayout" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/num_tel"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:fontFamily="@font/aleo"
                android:textColorHint="#666"
                android:textStyle="bold"
                android:inputType="number"
                android:maxLength="14"
                android:maxLines="1"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginHorizontal="20dp"
            android:hint="Mot de passe"
            style="@style/MyTextInputLayout" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mdp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:fontFamily="@font/aleo"
                android:inputType="textPassword"
                android:textColorHint="#666"
                android:textStyle="bold"
                android:maxLength="9"
                android:maxLines="1"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginHorizontal="20dp"
            android:hint="Répéter mot de passe"
            style="@style/MyTextInputLayout" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/rptmdp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:fontFamily="@font/aleo"
                android:inputType="textPassword"
                android:textColorHint="#666"
                android:textStyle="bold"
                android:maxLength="9"
                android:maxLines="1"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <CheckBox
                android:id="@+id/terms_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="J'accepte les conditions d'utilisation."
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/aleo"
                android:layout_marginEnd="10dp"
                />

            <ImageButton
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/info"
                android:background="@android:color/transparent"
                android:layout_gravity="end|center_vertical"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnsinsc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S’inscrire"
            android:textSize="19sp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="30dp"
            android:layout_gravity="center"
            android:background="@drawable/submit_button"
            android:textColor="#fff"
            android:fontFamily="@font/aleo"
            android:textAllCaps="false"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Déjà inscrit ?"
                android:textSize="15sp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:fontFamily="@font/aleo"
                />

            <TextView
                android:id="@+id/conxlink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connexion"
                android:textSize="15sp"
                android:textColor="#61A69F"
                android:fontFamily="@font/aleo"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</FrameLayout>