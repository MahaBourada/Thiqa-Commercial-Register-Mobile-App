<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:maxHeight="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/backgrounddrawing" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context=".activities.DashboardActivity"
        android:orientation="vertical"
        android:background="@drawable/white_backgroung"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="40dp"
        android:gravity="center">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="146.834dp"
            android:src="@drawable/trustlogo_final"
            android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue"
        android:textSize="38sp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="37dp"
        android:layout_marginHorizontal="35dp"
        android:textColor="@color/black"
        android:fontFamily="@font/aleo"
        android:textStyle="bold"
        android:layout_gravity="center"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Adresse e-mail"
        style="@style/MyTextInputLayout" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:fontFamily="@font/aleo"
            android:textColorHint="#666"
            android:textStyle="bold"
            android:inputType="text"
            android:maxLines="1"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Mot de passe"
        style="@style/MyTextInputLayout" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mdp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:fontFamily="@font/aleo"
            android:inputType="textPassword"
            android:textColorHint="#666"
            android:textStyle="bold"
            android:maxLines="1"/>

    </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnconx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connexion"
            android:textSize="19sp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="37dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="30dp"
            android:layout_gravity="center"
            android:background="@drawable/submit_button"
            android:textColor="#fff"
            android:fontFamily="@font/aleo"
            android:textAllCaps="false"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mot de passe oublié ?"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="40dp"
            android:textColor="@color/black"
            android:fontFamily="@font/aleo"
            android:layout_gravity="center"
            />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vous n’avez pas de compte ?"
            android:textSize="15sp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/aleo"
            />

        <TextView
            android:id="@+id/sinscrirelink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S’inscrire"
            android:textSize="15sp"
            android:layout_marginTop="40dp"
            android:textColor="#61A69F"
            android:fontFamily="@font/aleo"
            android:textStyle="bold"
            />
    </LinearLayout>

</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\@Copyright 2024 Thiqa - All rights reserved."
        android:fontFamily="@font/aleo"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_gravity="bottom"/>

</FrameLayout>